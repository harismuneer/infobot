<script type="text/javascript">

function disableOptionsIE7Fix() {
	if ($.browser.msie && parseFloat($.browser.version) < 8) {
		$("#af_price").find("[disabled]").css({'color': '#cccccc'});
        $("#af_price").change(function(){
            var selected = $(this).val();
            var disabled = $(this).find("[value="+selected+"]").attr("disabled");
            if (disabled != undefined) {
                $('#af_price option[value|="Review"]').attr('selected','selected');
            }
        });
    }
}

function checkPrices() {
	var year = $('#af_year option:selected').html();
	var make = $('#af_make').val();
	var model = $('#af_model option:selected').html();
	
	var avg = getAveragePrice(year,make,model);
	
	//remove from ie7 fixe function
	$("#af_price option").css({'color':''});
	
	if (avg != null) {
		$('#af_price option[value|="Prices"]').removeAttr('disabled');
		$('#af_price option[value|="Prices"]').attr('selected','selected');
		return;				
	}
	$('#af_price option[value|="Review"]').attr('selected','selected');
	$('#af_price option[value|="Prices"]').attr('disabled','disabled');
	
	disableOptionsIE7Fix();
}

$(document).ready(function(){
	
		var year=document.getElementById("af_year");
		var make=document.getElementById("af_make");
		var model=document.getElementById("af_model");
		
		$("#af_make").change(function(){
			populateModelDropdown(year,make,model);		
			$('#af_price option[value|="Prices"]').attr('selected','selected');
		});
	
		$("#af_model").change(function(){
			populateYearDropdown(year,make,model);
			checkPrices();
		});	
		
		$("#af_year").change(function(){
			checkPrices();
		});	
		
		$("#finder-submit").click(function(){
			if ($('#af_price').val() == 'Prices') {
				var chromeId = getChromeID($('#af_year option:selected').html(),
						$('#af_make').val(), $('#af_model option:selected').html());
				if (chromeId == null) return;
				
				
					
					var url = "http://bestprice.rankingsandreviews.com";
					
				
				url += "/redirect-link.html?chromeTrimId=" + chromeId + "&referrer_id=ZUSNA0025";
				
				top.location=url;
				return;
			}
			
			submitJumpACarForm(year,make,model);		
		});
		
		if ($("#af_make").val() != "ALL BRANDS") {
			populateModelDropdown(year,make,model);		
		}
	
	

});

</script>
				
