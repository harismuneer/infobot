function toggle_search() {

    searchdiv = document.getElementById('search');
    visible = searchdiv.style.visibility == 'visible';

    if(visible) {
        searchdiv.style.visibility = 'hidden';
        document.getElementById('searchtext').focus();
    } else {
        searchdiv.style.visibility = 'visible';
        document.getElementById('searchtext').focus();
    }
}

function sidebar_visibility() {

    if(document.documentElement.clientWidth <= 640) {
        document.getElementById('sidebar').style.display = 'none';
        document.getElementById('wrapper').style.marginRight = '50px';
    } else {
        document.getElementById('sidebar').style.display = 'block';
        document.getElementById('wrapper').style.marginRight = '300px';
    }

}

--></script>

