<script type="text/javascript">
function calcPrice() {
    if (document.getElementById("mp").value == "") 
    {
       alert('Please enter the "Monthly Payment" before clicking the "Calculate".');
       return;
    }

    if (document.getElementById("mp").value.search(/[^0-9\.]/) != -1){
      alert('Incorrect symbols in "Monthly Payment"!');
      document.getElementById("mp").focus();
      document.getElementById("mp").select();
      return;
    }

    if (document.getElementById("dp").value.search(/[^0-9\.]/) != -1)
    {
      alert('Incorrect symbols in "Down Payment"!');
      document.getElementById("dp").focus();
      document.getElementById("dp").select();
      return;
    } 

    if (document.getElementById("st").value.search(/[^0-9\.]/) != -1)
    {
      alert('Incorrect symbols in "Sales Tax Per State"!');
      document.getElementById("st").focus();
      document.getElementById("st").select();
      return;
    } 

    if (document.getElementById("dp").value == "")
     document.getElementById("dp").value = "0";
    if (document.getElementById("st").value == "")
     document.getElementById("st").value = "0";

    
    var mp = document.getElementById("mp").value-0;
    var months = document.getElementById("loan_term").value-0;

    if (document.getElementById("credit_rating").value == "950") var apr = 1;
    if (document.getElementById("credit_rating").value == "750") var apr = 7;
    if (document.getElementById("credit_rating").value == "600") var apr = 14;
    if (document.getElementById("credit_rating").value == "300") var apr = 21;

    var tax = (document.getElementById("st").value-0)/100;
    var dp = document.getElementById("dp").value-0;

    var amt = (mp/(apr/100/12)*(1-Math.pow(1+(apr/100/12),-months))+dp)/(1+tax);
    amt = Math.round(amt)+"";
    
    var price = "";
    for (i=amt.length-1;i>=0;i--){
     price = amt.charAt(i)+price;
     if (((amt.length-i)%3 == 0) && (i != 0)) price = ","+ price;
    }

    document.getElementById("maxpricefin").value = price;

    amt = ((2400*mp*months/(tax+1))+2400*dp)/(1152+1.52*apr*months);
    amt = Math.round(amt)+"";
    
    price = "";
    for (i=amt.length-1;i>=0;i--){
     price = amt.charAt(i)+price;
     if (((amt.length-i)%3 == 0) && (i != 0)) price = ","+ price;
    }

    document.getElementById("maxpricefin_lease").value = price;


//    { [ (MSRP - MSRPx0.52 - DP) / months ] + [ (MSRP + MSRPx0.52) x (APR/2400) ] } x   {ST% + 1} = lease price
 }

function chkInt(field)
{
  if ((window.event.keyCode >= 48 && window.event.keyCode <= 57) || (window.event.keyCode == 8) || (window.event.keyCode == 9) || (window.event.keyCode == 63234) || (window.event.keyCode == 63235))
  {
    if (window.event.keyCode == 48 && field.value == "0")
     return false;
    else
     return true;
  } else
    return false;
}


function chkFloat(field)
{
 if ((window.event.keyCode >= 48 && window.event.keyCode <= 57) || (window.event.keyCode == 46) || (window.event.keyCode == 8) || (window.event.keyCode == 9) || (window.event.keyCode == 63234) || (window.event.keyCode == 63235))
 {
   var rng=document.selection.createRange();
//   alert(rng.text);
   if (field.value == "0" && rng.text == "" && window.event.keyCode >= 48 && window.event.keyCode <= 57)
    return false;
   if (window.event.keyCode != 46)
   {
    return true;
   } else {
     if (field.value.search(/\./) == -1 && field.value.length >= 0) 
        return true;
       else
        return false;  
   } 
 } else {
  return false;
 }     
} 

function SendForm(f, btn){
 if (btn == 1) f.maxprice.value = f.maxpricefin.value;
 if (btn == 2) f.maxprice.value = f.maxpricefin_lease.value;
 f.submit();
}

function get_specific_price_range_car_type_list(f) {
 var oPriceRange = document.getElementById("pricerange");
 var oVtype      = document.getElementById("vtype");
 callServer('POST', '/components/specific_price_range_car_type_list.php', 'pricerange='+oPriceRange.value+'&vtype='+oVtype.value, null, showHTML, 'car_list');
 return false;
}
</script>


