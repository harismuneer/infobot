			function replaceInternalLinks( resourceID )	{
				var namedLinks = document.links;
				var uriBase = escape( 'http%3a%2f%2fwww.library.nhs.uk%2fresources%2f%3fid%3d' );
				//check each link in the document to see if its an internal link
				for (var i = 0; i < namedLinks.length; i++  )	{
					//check if the link has a href attribute
					if (typeof(namedLinks[i].href) != undefined )	{
						var hrefParts = namedLinks[i].href.split(":")
						//check if this is a link to the same article
						if (hrefParts.length == 3 && isNaN(hrefParts[0]) && !isNaN(hrefParts[1]) && !isNaN(hrefParts[2])) {
							// this is a link to another nelh resource
							linkText = 'newsAndRssArticle.aspx?uri=' + uriBase + hrefParts[1] + '&pageID=' + hrefParts[2];
							namedLinks[i].href = linkText;
							namedLinks[i].target = "";
						}
					}
				}
			}
			
			function replaceImageLinks( )	{
				var imageObjs = document.images;
				//check each link in the document to see if its an internal link
				var localURL = document.getElementById("sampleHref1").href + "libraryImages/";
				for (var i = 0; i < imageObjs.length; i++  )	{
					//check if the link has a href attribute
					if (typeof(imageObjs[i].src) != undefined )	{
						if (imageObjs[i].src.indexOf(localURL)==0) {
							var tmpSrc = imageObjs[i].src;
							tmpSrc = tmpSrc.replace(localURL,"");
							tmpSrc = tmpSrc.replace("/libraryImages","");
							imageObjs[i].src = 'http://www.library.nhs.uk//libraryimages/'+ tmpSrc;
						}
					}
				}
			}
		</script>
		
