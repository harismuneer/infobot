$(function() {
	// ul.tabs to work as tabs for each div directly under div.panes
	$("ul.tabs").tabs("div.panes > div", {effect: 'fade'});
	
	// Toggle 'take survey' container to be
	// hidden on load
	// Toggle 'take survey' container
	if (KeepFormOpen==0)
		{
		$(".formButton-openContainer").slideUp(1);
		}
		
	//Switch the "Open" and "Close" state per click then slide up/down (depending on open/close state)
	$('.formButton-blue-topCap').click(function(){
		$(this).toggleClass("active").next().slideToggle("slow");
		return false; //Prevent the browser jump to the link anchor
	});
	
	// Needed to transform forms
	//$('.jqtransform').jqTransform();
	//$('.jqtransform').jqTransform({imgPath:'__scripts/jqtransformplugin/img/'});
	$('.jqtransform').jqTransform({imgPath:'http://www.freeadvice.com/__scripts/jqtransformplugin/img/'});
	
	
	// Make first item in rail line up with bottom of article headline
	var articleHeadlineHeight = $(".articleContainter h1").height();
	var railFirstItemHeight = articleHeadlineHeight + 20 + "px";
	$(".rail-firstItem").css("height", railFirstItemHeight);
	
	
	$(".googleSearch, #pageSearch").css("border","none");
	
});
