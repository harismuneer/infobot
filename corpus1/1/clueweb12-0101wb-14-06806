<script type="text/javascript">
	var url=encodeURIComponent("http://usnews.rankingsandreviews.com/cars-trucks/Ford_Edge/2008/");
	var title=encodeURIComponent("2008 Ford Edge Review");
	var description=encodeURIComponent("2008 Ford Edge Review -- U.S. News Best Cars");
	
	function get_facebook_count() {
		FB.api(
		  {
		    method: 'fql.query',
		    query: 'SELECT share_count FROM link_stat WHERE url = "' + url + '"'
		  },
		  function(response) {
		    $('a.fb-button span').html(response[0].share_count);
		  }
		);
	}
	
	function get_twitter_count() {
		jQuery.getJSON(
		    'ht'+'tp://urls.api.twitter.com/1/urls/count.json?url=' + url + '&callback=?', 
		    function (data) {
		    	if (data != null) 
		    		$('a.twitter-share span').html(data.count);
		    }
		);
	}

	function fbs_click() {
		window.open('http://www.facebook.com/sharer.php?u='+url+'&t='+description,'sharer','toolbar=0,status=0,width=485,height=450');
		return false;
	}
		
	function es_click() {
		window.open('/cars-trucks/aj/emailshare/?url=' + url + '&title='+ title,'email_share', 'width=485, height=480, menubar=0, status=0,toolbar=0, scrollbars=0'); 
		return false;
	}
	
	function ts_click() {
		window.open('http://twitter.com/share?url=' + url + '&related=USNewsCars&text=' + description,'share','toolbar=0,status=0,width=485,height=450'); 
		return false;
	}
</script>

