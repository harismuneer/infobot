							<option value="2006" >2006</option>
						
					</select>
					<input type="hidden" name="fa" value="results">

					<button type="submit" title="go"><span>Go</span></button></p>

				</form>

			<script type="text/javascript">
				function validateBrowseReports(myYear){
					var topic = document.getElementById("topic").value;
					var subtopic = document.getElementById("subtopic").value;
					var expert = document.getElementById("analysts").value;
					var year = document.getElementById("year").value;
					if ( (topic == -1) && (subtopic == -1) && (expert == "") && (year == "") ){
						document.getElementById("year").value = myYear;
					}
					return true;
				}
			</script>
		</div>

		
