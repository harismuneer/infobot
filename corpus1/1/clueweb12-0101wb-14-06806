		$(document).ready(function() {
		
			if($('#zipcode').val() && $('#zipcode').val().length == 5){
				$('.dq_btn').removeAttr('disabled');
			}

			//only allow the user to input numbers for the zip			
			$('#zipcode').keypress( function(evt){
				var charCd = (evt.which) ? evt.which : evt.keyCode;
				if (charCd > 31 && (charCd < 48 || charCd > 57))
		    		return false;
		 		return true;
			});
			
		    $('#zipcode').keyup( function(evt){
		    	enableQuote();
            });		

		    $('#zipcode').blur( function(evt){
            	enableQuote();				
            });	
        	   
        
        	$("a[rel*=leanModal]").leanModal({top: 200, overlay: 0.5});
	    	 
			$('#zag-learn-more-text h4 span').click(function(){
				$('#lean_overlay').hide();
				$('#zag-learn-more-text').hide();
			});     			
		});
					
		function enableQuote(){
			var passed = true;
			var zipRE=/^\d{5}$/;
			if($('#zipcode').val().search(zipRE)==-1){
				passed = false;
			}
			if(passed){
				$('.dq_btn').removeAttr('disabled');
			} else {
				$('.dq_btn').attr('disabled', 'true');
			}
		}			

	</script>
			

		
		
		
		
		
		
