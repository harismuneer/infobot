}


function doLoadPreview(itmID, elem, popupid) 
{

	var itmPreview = document.getElementById('itmPreview');
		itmPreview.style.display = 'none';	

	
	var tmpElem = document.getElementById('itmTMP');
	var imgElem = document.getElementById('imgElem' + itmID);
	
	var	winHeight = getWindowHeight();
	var winWidth = getWindowWidth();
	
	var imgPosY = findPosY(imgElem);
	
	//tmpElem.innerHTML = 'posY: ' + findPosY(imgElem) + ' Heigth: ' + getWidowHeigth();
	
	//tmpElem.style.left = findPosX(imgElem) + imgElem.offsetWidth;
	
	tmpElem.style.left = winWidth/2 - 200 + getScrollX();
	tmpElem.style.top = winHeight/2 - 200 + getScrollY();
	
	/*
	if(winHeight - imgPosY < 400)
	{
		tmpElem.style.top = imgPosY - ((imgPosY/(winHeight + getScrollY())) * 400);
	}
	else
	{
		tmpElem.style.top = imgPosY;
	}
	*/

	tmpElem.style.display = 'block';
	
	if (window.XMLHttpRequest) {
		req = new XMLHttpRequest();
	}
	else if (window.ActiveXObject) {
		req = new ActiveXObject("Microsoft.XMLHTTP");
	}

		// request data passing searchString as an URL parameter
	var d = new Date();
	//req.open("GET", "./itemPreview.cfm?itemid=" + itmID + "&token=" + d.valueOf(), true);
	req.open("GET", "./showpopup.cfm?itemid=" + itmID + "&layoutID=" + popupid + "&token=" + d.valueOf(), true);
	req.send(null);
	
	//alert("./showpopup.cfm?itemid=" + itmID + "&layoutID=" + popupid + "&token=" + d.valueOf());
			
		// gives the request object an event handler
	req.onreadystatechange = function() {
		//alert(req.readyState);

		if ((req.readyState == 4) && (req.status == 200)) {
		// creates an array from returned list
				

				itmPreview.innerHTML = "<table cellpadding='0' cellspacing='0' style='margin-bottom:-2px; width: 100%; position:absolute;'><tr><td align='right'> <table cellpadding='0' cellspacing='0' style='border:none; color:white;'><tr><td>&nbsp;</td><td style='padding:6px;'><img src='x.jpg'></td></tr></table></td></tr></table>";
				itmPreview.innerHTML += req.responseText;
				
				setTimeout('showPrev('+itmID+')',1000);
				
				return false;			

			}	
				
		}
		
		return false;
	}

