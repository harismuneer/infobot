    <script type="text/javascript"><!--
    // store search history to be able to control offset
    var currentSearchesOffsets = new Object;

    function find_multiple_video() {
                jQuery('.tabtrigger').offscreentabs('activateTab', 'videos');
                var query = jQuery("#videoquery0").val();
                var fquery = query.replace(/[\W\s]+/i, '_');

                if (currentSearchesOffsets[fquery] == undefined) {
                    currentSearchesOffsets[fquery] = 0;
                }
                window.currentSearchesOffsets = currentSearchesOffsets;
                jQuery.ajax({
                        data: {
                        t: 'cheetah-article/mvs.txt',
                        orderby: 'published',
                        corpus: 'current',
                        language_id: '1',
                        query: query,
                        offset: currentSearchesOffsets[fquery]
                    },
                    dataType: 'jsonp',
                    url: 'http://upge.wn.com/',
                    success: function(text) {
                            jQuery('#multiple_video').prepend(jQuery(text));
                            window.currentSearchesOffsets[fquery] += 9;
                    },
                    complete: function() {
                        //theForm.find('input[type=submit]').attr('disabled', '');
                        //$('html,body').animate({ scrollTop: $('#multiple_video').offset().top }, { duration: 'slow', easing: 'swing'});
                    }
                });
    }

var related_videos_loaded = false;
	function load_related_videos(current_page) {
		if (current_page == undefined) { current_page = 1; }
		if (related_videos_loaded == current_page) { return; }
		jQuery.ajax({
            url: '/api/upge/cheetah-article/suggestions',
            data: {'query': 'Ghost Rider: Spirit of Vengeance',
		   'spage': current_page},
            dataType: 'jsonp',
			success: function(text) {
			if(!text) { text = 'No suggestions'; }
			related_videos_loaded = current_page;
                jQuery('div#rel_videos').html(text);
			}
        });
	}
	
	
	
	
    function find_more_videos() {
                var query = 'Ghost Rider: Spirit of Vengeance';
                offset = last_count;
                last_count += 9;
                jQuery.ajax({
                        data: {
                        t: 'cheetah-article/mvs_more.txt',
                        offset: offset,
                        orderby: 'published',
                        corpus: 'current',
                        language_id: '1',
                        query: query
                    },
                    dataType: 'jsonp',
                    url: 'http://upge.wn.com/',
                    success: function(text) {
                            jQuery('#searchresults').append(jQuery(text));
                    }
                });
    }

            var wn_search_mangler = function(theform) {
                find_multiple_video();
                return false;
        }

        var last_count = 24;
        jQuery(function() {
            jQuery('div#container').find('.more_related').click(function(e) {
                find_more_videos();
                find_more_videos();
                e.preventDefault();
            })

            jQuery('.more_related_mvs').live('click', function(event) {
                find_multiple_video();
            });
            
            jQuery('#newssearch').click(function(event) {
                var search_string = jQuery("#videoquery0").val();
                search_string = search_string.toLowerCase();

                // We cannot handle certain characters in searches:
                if(search_string.indexOf('.') >= 0)
                    return true; // submit normally
                if(search_string.indexOf('/') >= 0)
                    return true; // submit normally
                if(search_string.indexOf(':') >= 0)
                    return true; // submit normally

                window.location = 'http://wn.com/' + search_string.replace(' ', '_');
                return false; // do not submit the form
            });
            //jQuery('#multiple-video-search').click(function(e) {
            //    find_multiple_video();
            //    event.preventDefault();
            //});
        });
        //-->
    </script>

    

    



        
