<!--

function changeTaxBracket()
{
	var tax = parseFloat(document.mainform.taxBracket.options[document.mainform.taxBracket.selectedIndex].value);
	var tax0,tax12;
	tax0 = tax;
	tax12 = tax <= 15 ? 0 : 15;
	
	document.mainform.fedtax0.value = tax0;
	document.mainform.fedtax12.value = tax12;
}

function doCalc()
{
	zeroBlanks(document.mainform);
	var p = numval(document.mainform.p.value);
	var sale  = numval(document.mainform.s.value);
	var profit = sale - p;

	var tax, net;
	
	tax = profit*numval(document.mainform.fedtax0.value)/100
		+ profit*numval(document.mainform.statetax0.value)/100
	net = sale - tax;
	document.mainform.tax0.value = formatNumber(tax,2);
	document.mainform.net0.value = formatNumber(net,2);
	var net0 = net;	
		
	tax = profit*numval(document.mainform.fedtax12.value)/100
		+ profit*numval(document.mainform.statetax12.value)/100
	net = sale - tax;
	document.mainform.tax12.value = formatNumber(tax,2);
	document.mainform.net12.value = formatNumber(net,2);
			
	if (net0 > 0)
		document.mainform.advantage.value = formatNumber(100.0*(net - net0)/net0,2);
	else
		document.mainform.advantage.value = "N/A";
	
}
//-->
