	tabSet.headline.preTabCell  = function(){
		if( className == 'tabSet-headline-on' ){
			return '<td bgcolor="#990000" width="4" valign="top"><img src="http://moritzlaw.osu.edu/electionlaw/images/tabset-headline-left-on.gif" width="4" height="4"></td>';
		}else{
			return '<td bgcolor="#7F7F7F" width="4" style="border-top:2px solid #FFFFFF; border-bottom: 1px solid #FFFFFF;" valign="top"><img src="http://moritzlaw.osu.edu/electionlaw/images/tabset-headline-left-off.gif" width="4" height="4"></td>';
		}
	}
	tabSet.headline.postTabCell = function(){
		if( className == 'tabSet-headline-on' ){
			return '<td bgcolor="#990000" width="4" valign="top"><img src="http://moritzlaw.osu.edu/electionlaw/images/tabset-headline-right-on.gif" width="4" height="4"></td>';
		}else{
			return '<td bgcolor="#7F7F7F" width="4" style="border-top:2px solid #FFFFFF; border-bottom: 1px solid #FFFFFF;" valign="top"><img src="http://moritzlaw.osu.edu/electionlaw/images/tabset-headline-right-off.gif" width="4" height="4"></td>';
		}
	}
	tabSet.headline.preTabFoot  = function(){
		output = ( className == 'tabSetFoot-headline-on' ) ? '<td class="tabSetFoot-headline-on">'+this.spacer+'</td>' : '<td class="tabSetFoot-headline-off">'+this.spacer+'</td>';
		return output;
	}
	tabSet.headline.postTabFoot = function(){
		output = ( className == 'tabSetFoot-headline-on' ) ? '<td class="tabSetFoot-headline-on">'+this.spacer+'</td>' : '<td class="tabSetFoot-headline-off">'+this.spacer+'</td>';
