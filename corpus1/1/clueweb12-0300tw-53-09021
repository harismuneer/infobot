    <script type="text/javascript"><!--
    var map=false;
    var geocoder=false;
    var marker=false;
    var infowin=false;
    var locationmap=false;
    function initialize() {
        geocoder = new google.maps.Geocoder();
        var latlng = new google.maps.LatLng(0,0);
        var myOptions = {
          zoom: 1,
          center: latlng,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var canvas = document.getElementById("map_canvas");
        if(canvas){
            map = new google.maps.Map(canvas, myOptions);
        }
    }


    
    // geocode methods
    jQuery(function() {
        $('#related_places a').mouseover(function() {
            l = $(this).html().replace(/^\s*|\s*$/g,'')
            geocoder.geocode( { 'address': l}, function(results, status) {
              if (status == google.maps.GeocoderStatus.OK) {
                if (marker) { marker.setMap(null); }
                if (infowin) { infowin.close(); }
                map.setCenter(results[0].geometry.location);
                marker = new google.maps.Marker({
                    map: map, 
                    position: results[0].geometry.location,
                    animation: google.maps.Animation.DROP,
                    title:l
                });
                infowin = new google.maps.InfoWindow({
                    content: '<strong>'+results[0].formatted_address+'</strong><br /><em><a href="http://wn.com/'+l.replace('/\s+/g', '_')+'" title="'+l+'">&raquo; more WN on '+l+'</a></em>'
                });
                infowin.open(map, marker);
                map.setZoom(4);
              } else {
                if (marker) { marker.setMap(null); }
                if (infowin) { infowin.close(); }
                //alert("Could not locate on the map!");
              }
            });         
        });
    });
     // -->
</script>

