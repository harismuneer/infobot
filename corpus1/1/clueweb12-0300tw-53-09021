        jQuery(function() {
            // hyphenate video details
            // only use this for english language
            jQuery('.video-info').each(function() {
                Hyphenator.hyphenate(this, 'en');
            });

            jQuery('.videoplayer-play-next').click(function(event) {
                event.preventDefault();
                videoplayer.playNextPlaylistVideo();
            });
            
            jQuery('.videoplayer-play-all').click(function(event) {
                event.preventDefault();
                videoplayer.clearPlaylist();
                videoplayer.addVideo(jQuery('#mainvideoresults .video-info').slice(0, 23));
                videoplayer.playPlaylist();
            });
             jQuery('#restore').click(function(event) {
                    event.preventDefault();
                    videoplayer.clearPlaylist();
                    videoplayer.addVideo(jQuery('#mainvideoresults .video-info').slice(0, 14));
                    videoplayer.playPlaylist();
                });
            window.onPlayVideo = function(event) {
                videoplayer.log('onPlayVideo');
                event.preventDefault();
                var videoData = videoplayer.extractVideoData($(event.currentTarget));
                videoplayer.log(videoData);
                videoplayer.playFromPlaylist(videoData, this.AUTOSTART);
                };

            window.onAddVideo = function(event) {
                videoplayer.log('onAddVideo');
                event.preventDefault();
                var videoData = videoplayer.extractVideoData($(event.currentTarget));
                var playlist = videoplayer.getPlaylist();
                playlist.push(videoData);
                videoplayer.setPlaylist(playlist);
                videoplayer.log('onAddVideo done.');
            };

            jQuery('.addvideo').livequery(function() {
                $(this).click(window.onAddVideo);
            });

            jQuery('.playvideo').livequery(function() {
                $(this).click(window.onPlayVideo);
            });
            
        });

