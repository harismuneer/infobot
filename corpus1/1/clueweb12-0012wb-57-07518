			e.stopPropagation();
			e.preventDefault();

			var href = $(this).attr('href'),
				$if = $('<iframe>').appendTo('body').html('<scr'+'ipt'+'>window.open("'+href+'", "twitter_tweet", "left=100,top=100,height=500,width=550,personalbar=0,toolbar=0,scrollbars=1,resizable=1");<'+'/scr'+'ipt>').remove();
		} );
	}
)(jQuery, this);
	
</script>

