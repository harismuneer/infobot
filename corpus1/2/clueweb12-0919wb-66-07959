<script language="javascript">
	// Simulates PHP's date function
	Date.prototype.format = function(format) {
		var returnStr = '';
		var replace = Date.replaceChars;
		for (var i = 0; i < format.length; i++) {
			var curChar = format.charAt(i);
			if (replace[curChar]) {
				returnStr += replace[curChar].call(this);
			} else {
				returnStr += curChar;
			}
		}
		return returnStr;
	};

	Date.replaceChars = {
		shortMonths: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
		longMonths: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
		shortDays: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
		longDays: ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'],
		
		// Day
		d: function() { return (this.getDate() < 10 ? '0' : '') + this.getDate(); },
		D: function() { return Date.replaceChars.shortDays[this.getDay()]; },
		j: function() { return this.getDate(); },
		l: function() { return Date.replaceChars.longDays[this.getDay()]; },
		N: function() { return this.getDay() + 1; },
		S: function() { return (this.getDate() % 10 == 1 && this.getDate() != 11 ? 'st' : (this.getDate() % 10 == 2 && this.getDate() != 12 ? 'nd' : (this.getDate() % 10 == 3 && this.getDate() != 13 ? 'rd' : 'th'))); },
		w: function() { return this.getDay(); },
		z: function() { return "Not Yet Supported"; },
		// Week
		W: function() { return "Not Yet Supported"; },
		// Month
		F: function() { return Date.replaceChars.longMonths[this.getMonth()]; },
		m: function() { return (this.getMonth() < 9 ? '0' : '') + (this.getMonth() + 1); },
		M: function() { return Date.replaceChars.shortMonths[this.getMonth()]; },
		n: function() { return this.getMonth() + 1; },
		t: function() { return "Not Yet Supported"; },
		// Year
		L: function() { return (((this.getFullYear()%4==0)&&(this.getFullYear()%100 != 0)) || (this.getFullYear()%400==0)) ? '1' : '0'; },
		o: function() { return "Not Supported"; },
		Y: function() { return this.getFullYear(); },
		y: function() { return ('' + this.getFullYear()).substr(2); },
		// Time
		a: function() { return this.getHours() < 12 ? 'am' : 'pm'; },
		A: function() { return this.getHours() < 12 ? 'AM' : 'PM'; },
		B: function() { return "Not Yet Supported"; },
		g: function() { return this.getHours() % 12 || 12; },
		G: function() { return this.getHours(); },
		h: function() { return ((this.getHours() % 12 || 12) < 10 ? '0' : '') + (this.getHours() % 12 || 12); },
		H: function() { return (this.getHours() < 10 ? '0' : '') + this.getHours(); },
		i: function() { return (this.getMinutes() < 10 ? '0' : '') + this.getMinutes(); },
		s: function() { return (this.getSeconds() < 10 ? '0' : '') + this.getSeconds(); },
		// Timezone
		e: function() { return "Not Yet Supported"; },
		I: function() { return "Not Supported"; },
		O: function() { return (-this.getTimezoneOffset() < 0 ? '-' : '+') + (Math.abs(this.getTimezoneOffset() / 60) < 10 ? '0' : '') + (Math.abs(this.getTimezoneOffset() / 60)) + '00'; },
		P: function() { return (-this.getTimezoneOffset() < 0 ? '-' : '+') + (Math.abs(this.getTimezoneOffset() / 60) < 10 ? '0' : '') + (Math.abs(this.getTimezoneOffset() / 60)) + ':' + (Math.abs(this.getTimezoneOffset() % 60) < 10 ? '0' : '') + (Math.abs(this.getTimezoneOffset() % 60)); },
		T: function() { var m = this.getMonth(); this.setMonth(0); var result = this.toTimeString().replace(/^.+ \(?([^\)]+)\)?$/, '$1'); this.setMonth(m); return result;},
		Z: function() { return -this.getTimezoneOffset() * 60; },
		// Full Date/Time
		c: function() { return this.format("Y-m-d") + "T" + this.format("H:i:sP"); },
		r: function() { return this.toString(); },
		U: function() { return this.getTime() / 1000; }
	};

	function insertNote(newNodeId) {
		var author = $("#author").val();
		var message = $("#message").val();

		insertNoteVisually(author, message, newNodeId);
		$("#postedNote").show('fast');

		$("#author").val("");
		$("#message").val("");
	}

	function insertNoteVisually(author, message, noteId) {
		var htmlVal = $("#blankCommentTemplate");
		var htmlBlock = htmlVal[0].innerHTML;
		var currentDate = new Date();
		//	Date format: 	12:47pm on Mar 18, 2010
		var dateString = currentDate.format('g:ia')+ ' on ' + currentDate.format('M j, Y');

		htmlBlock = htmlBlock.replace("INSERT_AUTHORNAME", author);
		htmlBlock = htmlBlock.replace("INSERT_CONTENT", message);
		htmlBlock = htmlBlock.replace(/INSERT_COMMENTID/g, noteId);
		htmlBlock = htmlBlock.replace(/INSERT_DATE/g, dateString);

		$(htmlBlock).insertBefore("#insertCommentsHere");
	}
	
	function submitComment() {
		var formResponse = $('#commentForm').ajaxSubmit({
			success : function(data, textStatus) {
				var lenghtOfJSON = data.indexOf("EOJSON");
				var cleanData = data.substring(0, lenghtOfJSON);
				jsonObj = $.evalJSON(cleanData);
				if (jsonObj.isValid) {
					removeErrors();
					hideMessages();
					insertNote(jsonObj.newNodeId); // insert note visually, blank out form
				} else {
					showMessages(jsonObj.fieldMessages);
					addErrors(jsonObj.fields);
				}
			}
		});
		return(false);
	}

	function flagInappropriate(commentObjId) {
		document.flagCommentId = commentObjId;
		// reveal box
		document.popupFacebox('flagInappropriate');
	}

	function flagInappropriateCancel() {
		document.flagCommentId = null;
		// close box
		document.closeFacebox();
	}

	function flagInappropriateSubmit_TEST() {
		commentObjId = document.flagCommentId;

		// hide box either way
		document.closeFacebox();
		markCommentAsFlagged(commentObjId);
	}

	function flagInappropriateSubmit() {
		commentObjId = document.flagCommentId;

		//		console.log(document.location);
		var url = "http://"+document.location.host+"/commenting/markinappropriate";
		jQuery.post( url,
				{"commentId": commentObjId},
				function (data, textStatus, XMLHttpRequest) {
						var lengthOfJSON = data.indexOf("EOJSON");
						var cleanData = data.substring(0, lengthOfJSON);
						jsonObj = $.evalJSON(cleanData);
//						console.log(jsonObj);

						if (jsonObj.isValid) {
							markCommentAsFlagged(commentObjId);
						}
						// hide box either way
						document.closeFacebox();
						document.popupFacebox('flagInappropriateDone');
			 	}
		);
	}

	function markCommentAsFlagged(commentObjId) {
		$("#comment_"+commentObjId+" > .appropriate").hide("fast");
		$("#comment_"+commentObjId+" > .inappropriate").show("fast");
	}
</script>


