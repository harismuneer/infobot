function sendRequest() {
   new Ajax.Updater('category',"category.php",{
      method: 'post',
      parameters: Form.serialize("category"),
      asynchronous: true,
      onComplete: showResponse
   });
}
function confirmdelete(){
   var answer = confirm ("You are about to delete a line item.");
   if (answer) {
      sendRequest();
   } else {
      alert("Please uncheck the item for deletion.");
   }
}
function showResponse(req){
   $('show').innerHTML= req.responseText;
}

